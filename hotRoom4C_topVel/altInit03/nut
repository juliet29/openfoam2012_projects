FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];


internalField   uniform 0;

boundaryField
{
    inlet
    {
        type            nutkWallFunction;
        value           uniform 0;
    }
    ground
    {
        type            atmNutkWallFunction;
        #include        "ABLConditions"
        value           uniform 0;
    }
    wtwalls
    {
        type            symmetry;
    }
    top
    {
        type            nutkWallFunction;
        value           uniform 0;
    }
    outlet
    {
        type            nutkWallFunction;
        value           uniform 0;
    }
    defaultFaces
    {
        type            atmNutkWallFunction;
        #include        "ABLConditions"
        value           uniform 0;
    }
    buildingFaces_master
    {
        type            nutkWallFunction;
        coupleGroup     buildingFaces;
        value           uniform 0;
    }
    buildingFaces_slave
    {
        type            nutkWallFunction;
        coupleGroup     buildingFaces;
        value           uniform 0;
    }
}


