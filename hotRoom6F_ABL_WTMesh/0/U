FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
      type            atmBoundaryLayerInletVelocity;
      #include        "ABLConditions"
      value           uniform (0 0 0);
    }

    outlet
    {
        type            zeroGradient;
    }

    ground
    {
        type            noSlip;
    }
     defaultFaces
    {
        type            noSlip;
    }

    top
    {
      type            fixedValue;
    #include        "ABLConditions"
      value           uniform (7.9 0 0);
    }

    wtwalls
    {
        type            symmetry;
    }
    buildingFaces_master
    {
        type            noSlip;
    }
    buildingFaces_slave
    {
        type            noSlip;
    }
}

