FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];

internalField   uniform 440.15;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           $internalField;
    }
    outlet
    {
        type            zeroGradient;
    }
    top
    {
        type            omegaWallFunction;
        value           $internalField;
    }
    bottom
    {
        type            atmOmegaWallFunction;
        value           uniform 0;
    }
    side01
    {
        type            symmetry;
    }

    side02
    {
        type            symmetry;
    }
        box
    {
        type            omegaWallFunction;
        value           $internalField;
    }
}


