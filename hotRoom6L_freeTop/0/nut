FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0.426;

boundaryField
{
    inlet
    {
        type            calculated;
        value           uniform 0.426;
    }
    outlet
    {
      type            calculated;
        value           uniform 0;
    }
    top
    {
      type            calculated;
        value           uniform 0.426;
    }
    bottom
    {
        type            atmNutWallFunction;
        #include        "ABLConditions";
        value           uniform 0.0001;
    }
    side01
    {
        type            symmetry;
    }

    side02
    {
        type            symmetry;
    }
}


